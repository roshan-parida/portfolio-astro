---
import Layout from "../layouts/Layout.astro";

const skills = [
    "C/C++",
    "Python",
    "HTML5",
    "CSS3",
    "JavaScript",
    "TypeScript",
    "React",
    "Astro",
    "Node.js",
    "Git",
    "Linux",
    "Responsive Design",
];
---

<!-- pages/about.astro -->
<Layout title="About Me">
    <h1>// About Me</h1>

    <div class="about-container">
        <div class="about-image">
            <div class="profile-placeholder"></div>
            <h3>BCA Student & Aspiring Developer</h3>
            <p class="profile-subtitle">
                Building digital experiences, one line of code at a time.
            </p>
        </div>

        <div class="about-content">
            <p>
                Hello! I'm currently pursuing my Bachelor of Computer
                Applications (BCA) and am passionate about diving deep into the
                world of programming and web development. I enjoy tackling
                complex problems and strive to create solutions that are both
                efficient and elegant.
            </p>
            <p>
                Beyond the screen, you'll often find me immersed in manga,
                anime, games, or exploring captivating web series and movies. I
                find these creative pursuits often spark new ideas and
                perspectives that I bring back to my coding projects. My goal is
                to build practical, innovative applications.
            </p>

            <h3 class="skills-heading">// Skills</h3>
            <div class="skills-list">
                {skills.map((skill) => <span class="skill-tag">{skill}</span>)}
            </div>
        </div>
    </div>
</Layout>

<style>
    .about-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        margin-top: 2rem;
    }

    @media (min-width: 768px) {
        .about-container {
            grid-template-columns: 1fr 2fr;
            align-items: start;
        }
    }

    .about-image {
        background-color: var(--bg-secondary);
        border-radius: 6px;
        padding: 2rem 1.5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        border: 1px solid var(--border);
        height: fit-content;
    }

    .profile-placeholder {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background-color: var(--border);
        position: relative;
        overflow: hidden;
        margin-bottom: 1.5rem;
        border: 3px solid var(--bg-primary);
        box-shadow: 0 0 0 3px var(--accent);
    }

    .profile-placeholder::before {
        content: "</>";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-family: var(--font-mono);
        font-size: 3rem;
        color: var(--accent);
    }

    .about-image h3 {
        font-family: var(--font-mono);
        color: var(--text-primary);
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
    }

    .profile-subtitle {
        color: var(--text-secondary);
        font-size: 0.9rem;
        line-height: 1.4;
    }

    .about-content {
        background-color: var(--bg-secondary);
        padding: 1.5rem 2rem;
        border-radius: 6px;
        border: 1px solid var(--border);
    }

    .about-content p {
        margin-bottom: 1rem;
        color: var(--text-secondary);
        font-size: 0.95rem;
    }
    .about-content p:last-of-type {
        margin-bottom: 2rem;
    }

    .skills-heading {
        margin-top: 0;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        font-family: var(--font-mono);
        color: var(--accent);
        font-size: 1.25rem;
        border-bottom: 1px solid var(--border);
    }

    .skills-list {
        margin-top: 1rem;
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }

    .skill-tag {
        display: inline-block;
        background-color: rgba(88, 166, 255, 0.1);
        color: var(--accent);
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-family: var(--font-mono);
        border: 1px solid rgba(88, 166, 255, 0.3);
        line-height: 1.4;
        transition: background-color 0.2s ease;
    }
    .skill-tag:hover {
        background-color: rgba(88, 166, 255, 0.2);
    }
</style>
