---
import Layout from "../layouts/Layout.astro";

const skills = [
    "C/C++",
    "Python",
    "HTML5",
    "CSS3",
    "JavaScript",
    "TypeScript",
    "React",
    "Astro",
    "Node.js",
    "Git",
    "Linux",
    "Responsive Design",
    "Web Accessibility",
    "UI/UX Principles",
    "REST APIs",
];
---

<Layout title="About Me" currentPath={Astro.url.pathname}>
    <h1>// About Me</h1>

    <div class="about-container">
        <aside class="about-sidebar">
            <div class="profile-card">
                <div class="profile-placeholder">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="64"
                        height="64"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="feather feather-terminal"
                        ><polyline points="4 17 10 11 4 5"></polyline><line
                            x1="12"
                            y1="19"
                            x2="20"
                            y2="19"></line></svg
                    >
                </div>
                <h3>[Your Name]</h3>
                <p class="profile-subtitle">BCA Student & Aspiring Developer</p>
                <div class="location">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="feather feather-map-pin"
                        ><path
                            d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                        ></path><circle cx="12" cy="10" r="3"></circle></svg
                    >
                    Delhi, India
                </div>
            </div>
        </aside>

        <section class="about-content">
            <p class="sans-serif-text">
                Hello! I'm currently pursuing my Bachelor of Computer
                Applications (BCA) and am passionate about diving deep into the
                world of programming and web development. I enjoy the challenge
                of solving complex problems and strive to create solutions that
                are not only efficient and functional but also provide a great
                user experience.
            </p>
            <p class="sans-serif-text">
                Working with Linux Mint on my laptop feels like home, and I'm
                constantly exploring new tools and technologies within the
                open-source ecosystem. My goal is to build practical, innovative
                applications while continuously learning and refining my craft
                in software engineering and web development.
            </p>
            <p class="sans-serif-text">
                Beyond the screen, you'll often find me immersed in manga,
                anime, games, or exploring captivating web series and movies. I
                find these creative pursuits often spark new ideas and
                perspectives that I bring back to my coding projects.
            </p>

            <h2 class="skills-heading">// Skills & Tools</h2>
            <div class="skills-list">
                {skills.map((skill) => <span class="skill-tag">{skill}</span>)}
            </div>
        </section>
    </div>
</Layout>

<style>
    .about-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-10);
        margin-top: var(--space-8);
    }

    @media (min-width: 840px) {
        .about-container {
            grid-template-columns: 280px 1fr;
        }
    }

    .about-sidebar {
        position: sticky;
        top: calc(var(--space-8) + 60px);
        align-self: start;
        height: fit-content;
    }

    .profile-card {
        background-color: var(--bg-secondary);
        border-radius: 12px;
        padding: var(--space-8);
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        border: 1px solid var(--border);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    .profile-placeholder {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: linear-gradient(
            135deg,
            var(--accent) 0%,
            var(--syntax-function) 100%
        );
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: var(--space-6);
        border: 4px solid var(--bg-primary);
        box-shadow: 0 0 15px rgba(78, 154, 255, 0.3);
    }

    .profile-placeholder svg {
        width: 50px;
        height: 50px;
        stroke: var(--bg-primary);
        stroke-width: 1.5;
    }

    .profile-card h3 {
        font-family: var(--font-mono);
        color: var(--text-primary);
        font-size: 1.25rem;
        margin-bottom: var(--space-1);
        font-weight: 700;
    }

    .profile-subtitle {
        color: var(--text-secondary);
        font-size: 0.95rem;
        margin-bottom: var(--space-4);
        font-family: var(--font-sans);
        line-height: 1.5;
    }

    .location {
        display: flex;
        align-items: center;
        gap: var(--space-2);
        font-size: 0.9rem;
        color: var(--text-secondary);
        font-family: var(--font-mono);
    }
    .location svg {
        stroke: var(--accent);
    }

    .about-content {
        padding: var(--space-4) 0;
    }

    .about-content p.sans-serif-text {
        font-family: var(--font-sans);
        font-size: 1rem;
        line-height: 1.8;
        color: var(--text-secondary);
        margin-bottom: var(--space-6);
    }

    .skills-heading {
        margin-top: var(--space-10);
        margin-bottom: var(--space-6);
    }

    .skills-list {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-3);
    }

    .skill-tag {
        display: inline-flex;
        align-items: center;
        gap: var(--space-2);
        background-color: var(--bg-secondary);
        color: var(--text-secondary);
        padding: var(--space-2) var(--space-4);
        border-radius: 6px;
        font-size: 0.85rem;
        font-family: var(--font-mono);
        border: 1px solid var(--border);
        line-height: 1.4;
        transition:
            background-color 0.2s ease,
            color 0.2s ease,
            border-color 0.2s ease,
            transform 0.2s ease;
        cursor: default;
    }
    .skill-tag:hover {
        background-color: rgba(78, 154, 255, 0.1);
        color: var(--accent);
        border-color: var(--accent);
        transform: translateY(-2px);
    }
</style>
