---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact Me" currentPath={Astro.url.pathname}>
    <h1>// Get In Touch</h1>

    <div class="contact-container">
        <section class="terminal-container">
            <header class="terminal-header">
                <div class="terminal-dots">
                    <div
                        class="terminal-dot"
                        style="background-color: #ff5f56;"
                    >
                    </div>
                    <div
                        class="terminal-dot"
                        style="background-color: #ffbd2e;"
                    >
                    </div>
                    <div
                        class="terminal-dot"
                        style="background-color: #27c93f;"
                    >
                    </div>
                </div>
                <div class="terminal-title">~/contact</div>
            </header>
            <div class="terminal-body">
                <p>
                    <span class="prompt">~ $</span>
                    <span class="command">echo</span>
                    <span class="string">"Feel free to reach out!"</span>
                </p>
                <p>
                    <span class="prompt">~ $</span>
                    <span class="command">cat</span> contact.info
                </p>
                <pre><code class="language-ini">
[Contact]
Email    = <a href="mailto:dev@example.com">dev@example.com</a>
GitHub   = <a href="https://github.com/yourusername" target="_blank" rel="noopener noreferrer">github.com/yourusername</a>
LinkedIn = <a href="https://linkedin.com/in/yourusername" target="_blank" rel="noopener noreferrer">linkedin.com/in/yourusername</a>
</code></pre>
                <p>
                    <span class="prompt">~ $</span>
                    <span class="cursor">â–‹</span>
                </p>
            </div>
        </section>

        <section class="contact-form-container">
            <h2>Send a Direct Message</h2>
            <form
                class="contact-form"
                name="contact"
                method="POST"
                data-netlify="true"
            >
                <input type="hidden" name="form-name" value="contact" />
                <div class="form-group">
                    <label for="name">Your Name:</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        required
                        placeholder="Ada Lovelace"
                    />
                </div>
                <div class="form-group">
                    <label for="email">Your Email:</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        placeholder="ada@example.com"
                    />
                </div>
                <div class="form-group">
                    <label for="message">Message:</label>
                    <textarea
                        id="message"
                        name="message"
                        rows="6"
                        required
                        placeholder="Let's build something cool together..."
                    ></textarea>
                </div>
                <button type="submit">
                    Send Message
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="feather feather-send"
                        ><line x1="22" y1="2" x2="11" y2="13"></line><polygon
                            points="22 2 15 22 11 13 2 9 22 2"></polygon></svg
                    >
                </button>
            </form>
        </section>
    </div>
</Layout>

<style>
    .contact-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-10);
        margin-top: var(--space-8);
    }

    @media (min-width: 900px) {
        .contact-container {
            grid-template-columns: 1fr 1fr;
            align-items: start;
            gap: var(--space-12);
        }
    }

    /* Terminal Styles */
    .terminal-container {
        border: 1px solid var(--border);
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
        background-color: var(--bg-secondary);
        height: fit-content;
    }

    .terminal-header {
        padding: var(--space-3) var(--space-4);
        display: flex;
        align-items: center;
        border-bottom: 1px solid var(--border);
        background-color: var(--bg-primary);
    }

    .terminal-dots {
        display: flex;
        gap: var(--space-2);
    }
    .terminal-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .terminal-title {
        flex-grow: 1;
        text-align: center;
        font-size: 0.85rem;
        color: var(--text-secondary);
        padding-right: 44px;
    }

    .terminal-body {
        padding: var(--space-6) var(--space-6) var(--space-4) var(--space-6);
        font-size: 0.9rem;
        line-height: 1.7;
    }

    .terminal-body p {
        margin-bottom: var(--space-3);
        display: flex;
        align-items: baseline;
        gap: 0.6ch;
    }

    .prompt {
        color: var(--accent);
        font-weight: 700;
    }
    .command {
        color: var(--syntax-keyword);
    }
    .string {
        color: var(--syntax-string);
    }

    .terminal-body pre {
        margin: var(--space-4) 0 0 0;
        padding: var(--space-4);
        background-color: var(--bg-primary);
        border: 1px solid var(--border);
        border-radius: 4px;
    }

    .terminal-body pre code {
        font-size: 0.85rem;
        line-height: 1.6;
        color: var(--text-primary);
    }
    /* Style comments and keywords within the code block */
    .terminal-body pre code .token.comment {
        color: var(--syntax-comment);
    }
    .terminal-body pre code .token.keyword {
        color: var(--syntax-attr-name);
    } /* Different color for ini keys */
    .terminal-body pre code .token.string {
        color: var(--syntax-string);
    } /* For values if needed */
    .terminal-body pre code a {
        color: var(--syntax-string);
        text-decoration: underline;
        text-underline-offset: 2px;
    }
    .terminal-body pre code a:hover {
        color: var(--accent-hover);
    }

    .cursor {
        /* Blinking cursor */
        display: inline-block;
        background-color: var(--text-primary);
        width: 0.6em;
        height: 1.1em;
        animation: blink 1s step-end infinite;
        margin-left: 0.2ch;
        vertical-align: baseline;
    }
    @keyframes blink {
        50% {
            background-color: transparent;
        }
    }

    .contact-form-container h2 {
        margin-bottom: var(--space-6);
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        gap: var(--space-6);
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-group label {
        margin-bottom: var(--space-2);
        font-size: 0.9rem;
        color: var(--text-secondary);
        font-weight: 700;
    }

    .form-group input,
    .form-group textarea {
        background-color: var(--bg-secondary);
        border: 1px solid var(--border);
        border-radius: 6px;
        padding: var(--space-3) var(--space-4);
        font-family: var(--font-sans);
        font-size: 1rem;
        color: var(--text-primary);
        transition:
            border-color 0.2s ease,
            box-shadow 0.2s ease;
    }
    .form-group input::placeholder,
    .form-group textarea::placeholder {
        color: var(--text-secondary);
        opacity: 0.7;
    }

    .form-group input:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: var(--accent);
        box-shadow: 0 0 0 3px rgba(78, 154, 255, 0.2);
    }

    .form-group textarea {
        resize: vertical;
        min-height: 140px;
        line-height: 1.6;
    }

    .contact-form button {
        background: linear-gradient(
            90deg,
            var(--accent) 0%,
            var(--syntax-function) 100%
        );
        color: var(--bg-primary);
        border: none;
        border-radius: 6px;
        padding: var(--space-3) var(--space-6);
        font-family: var(--font-mono);
        font-size: 1rem;
        font-weight: 700;
        cursor: pointer;
        transition:
            transform 0.15s ease,
            box-shadow 0.2s ease,
            opacity 0.2s ease;
        align-self: flex-start;
        display: inline-flex;
        align-items: center;
        gap: var(--space-3);
        box-shadow: 0 3px 8px rgba(78, 154, 255, 0.3);
    }

    .contact-form button:hover {
        opacity: 0.9;
        box-shadow: 0 5px 12px rgba(78, 154, 255, 0.4);
    }
    .contact-form button:active {
        transform: scale(0.97);
        box-shadow: 0 2px 5px rgba(78, 154, 255, 0.3);
    }
    .contact-form button svg {
        stroke: var(--bg-primary);
    }
</style>
