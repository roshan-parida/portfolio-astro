---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import type { Project } from "../types";

const featuredProject: Project = {
    title: "Flux: Music Streaming Site",
    description:
        "Music streaming site built with React and Node.js. Features user authentication, playlist management, and a sleek UI.",
    link: "https://github.com/roshan-parida/flux",
    tags: ["Vitejs", "Javascript", "MERN", "Nodejs"],
};
---

<Layout title="Home">
    <section class="hero">
        <h1>Hi, I'm Roshan Parida</h1>
        <p class="typewriter-text">
            Aspiring Developer | BCA Student | Tech Enthusiast
        </p>
        <p class="intro-text">
            Exploring the world of code and building cool things for the web.
            Currently focused on expanding my skills in web development and
            software engineering. Based in Delhi, India.
        </p>
        <a href="/about" class="inline-link">Learn more about me</a>
    </section>

    <section>
        <h2>// Featured Project</h2>
        <ProjectCard project={featuredProject} />
        <div class="view-all-link">
            <a href="/projects" class="inline-link">View all projects</a>
        </div>
    </section>

    <!-- <section>
        <h2>// Latest Thoughts (Optional Blog Teaser)</h2>
        <p>
            Check out my latest blog post about [Topic]... <a
                href="/blog"
                class="inline-link">Read more</a
            >
        </p>
    </section> -->
</Layout>

<style>
    .hero {
        text-align: center;
        padding: 2rem 0 3rem 0;
        border-bottom: 1px solid var(--border);
        margin-bottom: 3rem;
    }

    .hero h1 {
        color: var(--text-primary);
        font-size: 2.5rem;
        margin-bottom: 1rem;
        font-family: var(--font-sans);
        border-bottom: none;
    }

    .intro-text {
        max-width: 600px;
        margin: 0 auto 1.5rem auto;
        color: var(--text-secondary);
        font-size: 1rem;
        line-height: 1.7;
    }

    .view-all-link {
        margin-top: 1.5rem;
        text-align: right;
    }

    .typewriter-text {
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }
</style>
