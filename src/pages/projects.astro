---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import type { Project } from "../types";

const projects: Project[] = [
    {
        title: "Flux: Music Streaming Site",
        description:
            "Music streaming site built with React and Node.js. Features user authentication, playlist management, and a sleek UI.",
        link: "https://github.com/roshan-parida/flux",
        tags: ["Vitejs", "Javascript", "MERN", "Nodejs", "Render"],
    },

    {
        title: "PriceWatch: Automated price-tracking",
        description:
            "Automated price-tracking tool that monitors product prices and sends notifications when they drop below a certain threshold.",
        link: "https://github.com/yourusername/code-playground",
        tags: ["Nextjs", "Web Scraping", "Web APIs"],
    },

    {
        title: "Sentinel: Smart Home Security System",
        description:
            "Smart home security system that uses IoT devices to monitor and secure your home. Features real-time alerts and remote access.",
        link: "https://github.com/roshan-parida/sentinel",
        tags: ["Vanilla", "Nodejs", "Express", "IoT"],
    },
];
---

<Layout title="Projects" currentPath={Astro.url.pathname}>
    <h1>// My Projects</h1>
    <p class="page-intro sans-serif-text">
        Here's a selection of projects I've built, showcasing my skills in
        various technologies. More projects and experiments can be found on my <a
            href="https://github.com/yourusername"
            target="_blank"
            rel="noopener noreferrer">GitHub profile</a
        >.
    </p>

    <div class="project-grid">
        {
            projects.map((project, index) => (
                <ProjectCard project={project} index={index} />
            ))
        }
    </div>
</Layout>

<style>
    .page-intro {
        margin-top: calc(-1 * var(--space-4));
        margin-bottom: var(--space-10);
        color: var(--text-secondary);
        max-width: 70ch;
        font-size: 1.05rem;
        line-height: 1.8;
    }
    .sans-serif-text {
        font-family: var(--font-sans);
    }

    .page-intro a {
        /* Style link within intro */
        font-weight: 600;
        text-decoration: underline;
        text-decoration-thickness: 1px;
        text-underline-offset: 3px;
    }
    .page-intro a:hover {
        color: var(--accent-hover);
    }

    /* Ensure grid has space above/below */
    .project-grid {
        margin-top: var(--space-8);
        margin-bottom: var(--space-8);
    }
</style>
